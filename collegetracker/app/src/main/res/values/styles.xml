<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="editTextStyle">@style/App_EditTextStyle</item>
        <item name="android:spinnerStyle">@style/App_SpinnerStyle</item>
        <item name="android:imeOptions">flagNoFullscreen</item>
        <item name="android:windowBackground">@color/gray</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="App_SpinnerStyle" parent="@android:style/Widget.Spinner">
        <item name="android:windowBackground">@color/white</item>

    </style>
    <style name="App_EditTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:textColor">@drawable/edittext_color_format</item>
        <item name="android:foregroundTint">@color/white</item>
        <item name="android:backgroundTint">@drawable/remove_edittext_underline</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
